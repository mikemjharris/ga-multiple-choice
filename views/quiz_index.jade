extends layout

block content
  div(ng-app="quizApp")
    div(ng-controller="GenerateQuizController")
      h2 Multiple choice quiz
      
      div Existing Quiz Templates
        ul
          li(ng-repeat="quiz in existing_quizes")
            a(href="#" ng-click="showQuizTemplate(quiz)") {{ quiz.name }}

      div(ng-show="show_quiz_template")
        p name {{ show_quiz_template.name }}
        p nos questions {{ show_quiz_template.nos_questions }}
        p question {{ show_quiz_template.question_text }}
        p question_key {{ show_quiz_template.question_key }}
        p answer_key {{ show_quiz_template.answer_key }}
        a(href="#" ng-click="generateQuiz()") Generate New Questions
        br
        a(href="/quiz/{{ generated_quiz.id }}/play" ng-show="generated_quiz") {{ generated_quiz.msg }}

      div Existing quizes for this template
      ul
        li(ng-repeat="quiz in quizes") 
          a(href="/quiz/{{ quiz }}/play") Quiz {{ $index + 1}}




      




  script(src='../javascripts/lib/jquery/jquery-2.0.3.min.js')
  script(src='../javascripts/lib/angular/angular.js')
  script(src='../javascripts/lib/angular/angular-route.js')
  script(src='../javascripts/quiz-angular.js')       
    